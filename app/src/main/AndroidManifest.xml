            android:name="com.gryzoniopedia.rodentshelper.ROOM.Vet.Methods.AddEditVets"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Medicaments.ViewMedicaments"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Medicaments.Methods.AddEditMedicaments"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Visits.ViewVisits"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Visits.Methods.AddEditVisits"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.ViewHealth"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.ViewEncyclopedia"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.ViewPetHealth"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Notes.ViewNotes"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Notes.Methods.AddEditNotes"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.ViewOther"
            android:exported="true"
            android:screenOrientation="portrait"/>
