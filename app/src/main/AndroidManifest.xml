            android:name=".ROOM.Medicaments.AddMedicaments"
            android:exported="true" />
        <activity
            android:name=".ROOM.Visits.ViewVisits"
            android:exported="true" />
        <activity
            android:name=".ROOM.Visits.AddVisits"
            android:exported="true" />
        <activity
            android:name=".MainViews.ViewHealth"
            android:exported="true" />
        <activity
            android:name=".MainViews.ViewEncyclopedia"
            android:exported="true" />
        <activity
            android:name=".MainViews.ViewPetHealth"
            android:exported="true" />
        <activity
            android:name=".ROOM.Notes.ViewNotes"
            android:exported="true" />
        <activity
            android:name=".ROOM.Notes.AddNotes"
            android:exported="true" />
        <activity
            android:name=".MainViews.ViewOther"
            android:exported="true" />
