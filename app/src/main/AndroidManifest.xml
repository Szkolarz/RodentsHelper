            android:name=".MainViews.GoogleMaps.GoogleMaps"
            android:exported="true" />
        <activity
            android:name=".Encyclopedia.Common.ViewCagesupplyAndTreats"
            android:exported="true" />
        <activity
            android:name=".Encyclopedia.Common.ViewGeneralAndDiseases"
            android:exported="true" />
        <activity
            android:name=".ROOM.Weights.WeightInfoChinchilla"
            android:exported="true" />
        <activity
            android:name=".Notifications.NotificationsActivity"
            android:exported="true" />
        <activity
            android:name=".DatabaseManagement.ActivityLogin"
            android:exported="true" />

        <activity
            android:name=".DatabaseManagement.ActivityRegister"
            android:exported="true" />


        <receiver
            android:name=".Notifications.Receivers.NotificationReceiverWeight"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".Notifications.Receivers.NotificationReceiverFeeding"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".Notifications.Receivers.NotificationReceiverFeeding2"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".Notifications.Receivers.NotificationReceiverVisit"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".Notifications.Receivers.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>