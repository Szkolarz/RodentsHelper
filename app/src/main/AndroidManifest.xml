        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RodentsHelper"
        tools:targetApi="31"
        >

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key"/>

        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Rodent.ViewRodents"
            android:exported="false"
            android:icon="@drawable/ic_bin"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Vet.ViewVets"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.SplashScreen"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.MainViews.FirstStart"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Rodent.Methods.AddEditRodents"
            android:exported="true"
            android:screenOrientation="portrait"/>
