            android:name="com.gryzoniopedia.rodentshelper.Encyclopedia.Common.ViewGeneralAndDiseases"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.gryzoniopedia.rodentshelper.ROOM.Weights.WeightInfoTable"
