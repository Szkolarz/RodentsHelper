<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Medicaments.ViewMedicaments">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#ACC5E1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEmpty_med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="Nie ma żadnych pozycji w bazie danych. Aby dodać nowe lekarstwo, kliknij przycisk z plusikiem na górze ekranu."
                android:textColor="#5A5A5A"
                android:textSize="26sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMedicaments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="130dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <include
                layout="@layout/bottom_navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"></include>
        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAddMedicaments"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="addNewMedicament"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/roundbutton"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:backgroundTint="#5397DF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#0375a8"
        app:strokeWidth="3dp" /><![CDATA[/>


]]>
</androidx.constraintlayout.widget.ConstraintLayout>