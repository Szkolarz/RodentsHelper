<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ROOM.Rodent.AddRodents">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:elevation="32dp"
            android:gravity="center"

            app:cardBackgroundColor="#A31A1A"
            app:cardCornerRadius="60dp"
            app:cardElevation="5dp">


            <ImageView
                android:id="@+id/imageView_rodent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_image_view"
                android:cropToPadding="true"

                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera" />

        </androidx.cardview.widget.CardView>



        <EditText
            android:id="@+id/editTextEditName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:hint="Imię twojego pupila"
            android:maxLength="50"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioEditGroup1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonEditGender1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Samiec" />

                <RadioButton
                    android:id="@+id/radioButtonEditGender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Samica" />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="Data urodzenia ⌄"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextEditFur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Umaszczenie"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextEditNotes"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:hint="Notatki..." />

        <Button
            android:id="@+id/buttonAdd_rodent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#048FCD"
            android:text="Zapisz" />

        <Button
            android:id="@+id/buttonSaveEdit_rodent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#048FCD"
            android:text="Zapisz edycję" />

        <TextView
            android:id="@+id/textViewDate_hidden"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="data"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>