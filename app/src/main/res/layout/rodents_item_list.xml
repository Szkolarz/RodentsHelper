<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Id"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEditName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Imię" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Płeć:" />

    <TextView
        android:id="@+id/textViewListGender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Gender"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextListDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="date"
        android:text="Data urodzenia" />

    <EditText
        android:id="@+id/editTextListFur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Kolor umaszczenia" />

    <EditText
        android:id="@+id/editTextListNotes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Notatki" />

    <LinearLayout
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonListEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Edytuj" />

        <Button
            android:id="@+id/buttonListDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Usuń" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="6dp"
        android:background="#CA7A7A" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ju"
        android:text="Button" />

</LinearLayout>