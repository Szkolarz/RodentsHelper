<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="28dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rounded_rodent_list"
    android:orientation="vertical"
    tools:context="com.gryzoniopedia.rodentshelper.ROOM.Rodent.ViewRodents">

    <TextView
        android:id="@+id/editTextListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Id"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttonEdit_rodent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_edit"
                app:tint="#0375a8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Edytuj"
                android:textAlignment="center"
                android:textColor="#014D70"
                android:textColorHint="#77147A"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_rodent"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:elevation="32dp"
                android:gravity="center"

                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp">


                <ImageView
                    android:id="@+id/imageViewList_rodent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_image_view"
                    android:cropToPadding="true"

                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonRodentsPetHealth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundbutton_small_green"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                app:srcCompat="@drawable/ic_pet_health"
                app:strokeColor="#0375a8"
                app:strokeWidth="3dp"
                app:tint="#498A32" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opieka"
                android:textAlignment="center"
                android:textColor="#014D70"
                android:textColorHint="#77147A"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Imię pupila:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewName_rodent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Imię"
        android:textColor="#014D70"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Płeć:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewGender_rodent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="brak"
            android:textColor="#014D70"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageViewMale_rodent"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_gender_male" />

        <ImageView
            android:id="@+id/imageViewFemale_rodent"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_gender_female" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Data urodzenia:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewDate_rodent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewFur_rodentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Umaszczenie:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewFur_rodent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewNotes_rodentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Ewentualne notatki:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewNotes_rodent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal" />

</LinearLayout>