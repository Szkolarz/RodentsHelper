<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Id"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imię pupila:"
        android:textColor="#77147A"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Imię"
        android:textColor="#BE47FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Płeć:"
        android:textColor="#77147A"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewListGender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#BE47FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data urodzenia:"
        android:textColor="#77147A"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewListDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#BE47FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umaszczenie:"
        android:textColor="#77147A"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewListFur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#BE47FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ewentualne notatki:"
        android:textColor="#77147A"
        android:textColorHint="#77147A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewListNotes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#BE47FF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonListEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Edytuj" />

        <Button
            android:id="@+id/buttonListDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Usuń" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="6dp"
        android:background="#CA7A7A" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ju"
        android:text="Button" />

</LinearLayout>