<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/editTextListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Id"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/view3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:elevation="32dp"
            android:gravity="center"

            app:cardBackgroundColor="#A31A1A"
            app:cardCornerRadius="60dp"
            app:cardElevation="5dp">


            <ImageView
                android:id="@+id/imageViewList_rodent"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_image_view"
                android:cropToPadding="true"

                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imię pupila:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/textViewName_rodent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Imię"
        android:textColor="#014D70"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Płeć:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textViewGender_rodent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data urodzenia:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textViewDate_rodent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umaszczenie:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textViewFur_rodent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ewentualne notatki:"
        android:textColor="#014D70"
        android:textColorHint="#77147A"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"
        />

    <TextView
        android:id="@+id/textViewNotes_rodent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="brak"
        android:textColor="#014D70"
        android:textSize="24sp"
        android:layout_marginLeft="6dp"
        />

    <LinearLayout
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonEdit_rodent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#048FCD"
            android:text="Edytuj" />

        <Button
            android:id="@+id/buttonDelete_rodent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#048FCD"
            android:text="Usuń" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="6dp"
        android:background="#CA7A7A" />

</LinearLayout>