<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="#ACC5E1"
    tools:context=".MainViews.ViewEncyclopedia">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:popupTheme="@style/CustomPopupToolbar"
            app:theme="@style/CustomToolbarAdditional"
            app:titleTextAppearance="@style/Toolbar.TitleText">

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#0375a8" />

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout_treats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:animationCache="true"
                            app:tabBackground="@drawable/tablayout_design"

                            app:tabIconTint="@null"
                            app:tabIndicatorColor="@color/white"
                            app:tabIndicatorHeight="4dp"

                            app:tabInlineLabel="false"
                            app:tabSelectedTextColor="@color/white" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#0375a8" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:tint="#0375a8"
                                app:srcCompat="@drawable/ic_info" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textViewInfo_encyclopedia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Info"
                                    android:textColor="#014D70"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_encyclopedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_encyclopedia"
                                android:layout_width="300px"
                                android:layout_height="404px"
                                android:layout_centerVertical="true"
                                android:elevation="32dp"

                                android:gravity="center"
                                app:cardBackgroundColor="#FFFFFF"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="5dp">


                                <ImageView
                                    android:id="@+id/imageView_encyclopedia"
                                    android:layout_width="300px"
                                    android:layout_height="404px"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"

                                    android:background="@drawable/rounded_image_view"
                                    android:cropToPadding="true"
                                    android:scaleType="centerCrop"
                                    android:src="@android:drawable/ic_menu_camera" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/pager"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="1" />



                </LinearLayout>



            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <include
                layout="@layout/bottom_navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"></include>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>