<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ROOM.Rodent.AddRodents">

    <LinearLayout
        android:id="@+id/linearLayout_treats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ACC5E1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_treats"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_centerVertical="true"
                    android:elevation="32dp"
                    android:gravity="center"

                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="90dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/imageView_treats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/rounded_image_view"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_camera" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textViewDeleteImage_rodent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Wyczyść zdjęcie..."
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#014D70"
                    android:textColorHint="#77147A"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewName_treats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:text="Nazwa"
                    android:textColor="#014D70"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewDesc_treats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Opis"
                    android:textColor="#5C5C5C" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/view_treats"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="#048FCD" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>