        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:navigationBarColor">#048FCD</item>
        <item name="colorPrimary">#0375a8</item>
        <item name="colorPrimaryVariant">#048FCD</item>
        <item name="colorOnPrimary">@color/white</item>
